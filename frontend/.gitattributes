# text 파일 자동 감지 해서 LF 정규화
* text=auto

# 소스코드 파일들의 lf 통일
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf

# 설정파일 처리
*.config.js text eol=lf
*.config.ts text eol=lf
*.config.json text eol=lf
.babelrc text eol=lf
.eslintrc* text eol=lf
.prettierrc* text eol=lf
tsconfig*.json text eol=lf
vite.config.* text eol=lf
webpack.config.* text eol=lf
package.json text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# 환경 및 구성 파일
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
*.dockerfile text eol=lf

# 문서화
README* text eol=lf
CHANGELOG* text eol=lf
LICENSE* text eol=lf
CONTRIBUTING* text eol=lf

# 바이너리 파일 처리: git 감지 없이 텍스트 변환 x
# 이미지
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.avif binary
*.bmp binary
*.tiff binary

# 폰트
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary

# 압축파일
*.zip binary
*.tar binary
*.tar.gz binary
*.tar.bz2 binary
*.7z binary
*.rar binary

# 오디오 비디오
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wmv binary
*.flv binary
*.wav binary
*.ogg binary

# 문서 바이너리
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# 기타 
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Git LFS
*.psd filter=lfs diff=lfs merge=lfs -text
*.sketch filter=lfs diff=lfs merge=lfs -text

# GitHub Linguist 자동 감지 대신 명시 지정으로 인식
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript

# 언어 통계에서 생성된 파일 무시
dist/ linguist-generated=true
build/ linguist-generated=true
coverage/ linguist-generated=true
node_modules/ linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true
*.bundle.js linguist-generated=true
*.chunk.js linguist-generated=true